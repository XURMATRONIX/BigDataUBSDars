import cv2
import numpy as np
from google.colab.patches import cv2_imshow

# 1. Bo'sh rasm (qora fon)
img = np.zeros((200, 600), dtype=np.uint8)

# 2. Ismingizni yozamiz
cv2.putText(img, "Xurmatillo Oxunov", (20, 100),
            cv2.FONT_HERSHEY_SIMPLEX, 1.5, (255), 3)

# 3. Yana bir oq kvadrat maska tayyorlaymiz
mask = np.full_like(img, 200, dtype=np.uint8)  # hamma joyi oqish

# 4. NumPy qo‘shish (overflow bo‘lishi mumkin)
numpy_sum = img + mask

# 5. cv2 qo‘shish (saturation arithmetic)
cv2_sum = cv2.add(img, mask)

# 6. Natijalarni ko‘rsatish
cv2_imshow(img)
cv2_imshow(numpy_sum)
cv2_imshow(cv2_sum)

# In Colab, waitKey(0) and destroyAllWindows() are not needed with cv2_imshow
# cv2.waitKey(0)
# cv2.destroyAllWindows()
